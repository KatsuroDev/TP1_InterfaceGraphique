<Window x:Class="TP1_InterfaceGraphique.Windows.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP1_InterfaceGraphique.Windows"
        mc:Ignorable="d"
        Title="Administration Omnivox" Height="325" Width="325"
        Style="{StaticResource DarkWindow}">
    <StackPanel VerticalAlignment="Center" Margin="20,0">
        <StackPanel VerticalAlignment="Center">
            <Button x:Name="StudentsBtn" Click="Button_Click" Content="Modifier les étudiants" Template="{DynamicResource LightButton}"></Button>
            <Button x:Name="TeachersBtn" Click="Button_Click" Content="Modifier les enseignants" Template="{DynamicResource LightButton}"></Button>
            <Button x:Name="ScheduleBtn" Click="Button_Click" Content="Modifier les horaires" Template="{DynamicResource LightButton}"></Button>
        </StackPanel>

        <Border BorderBrush="White" BorderThickness="1" Margin="10, 10">
        </Border>

        <StackPanel VerticalAlignment="Center">

            <Button x:Name="QuitBtn" Content="Quitter" Template="{DynamicResource DarkButton}" Click="Button_Click"></Button>
        </StackPanel>
        
    </StackPanel>
</Window>
